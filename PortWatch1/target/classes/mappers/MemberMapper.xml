<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
MemberMapper.xml - 실제 MEMBER 테이블 완벽 매핑
━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

✅ 실제 MEMBER 테이블 구조:
- member_id VARCHAR(50) PK
- member_email VARCHAR(100)
- member_pass VARCHAR(200)
- member_name VARCHAR(20)
- member_phone VARCHAR(20)
- member_address VARCHAR(255)
- member_gender VARCHAR(10)
- member_birth TIMESTAMP
- member_role VARCHAR(20) DEFAULT 'USER'
- member_status VARCHAR(20) DEFAULT 'ACTIVE'
- created_at TIMESTAMP AUTO
- updated_at TIMESTAMP AUTO

@version FINAL COMPLETE
-->

<mapper namespace="com.portwatch.persistence.MemberDAO">
    
    <!-- ========================================
         Result Map - 회원 정보 매핑
         ======================================== -->
    <resultMap id="MemberResultMap" type="MemberVO">
        <id property="memberId" column="member_id"/>
        <result property="memberEmail" column="member_email"/>
        <result property="memberPass" column="member_pass"/>
        <result property="memberName" column="member_name"/>
        <result property="memberPhone" column="member_phone"/>
        <result property="memberAddress" column="member_address"/>
        <result property="memberGender" column="member_gender"/>
        <result property="memberBirth" column="member_birth"/>
        <result property="memberRole" column="member_role"/>
        <result property="memberStatus" column="member_status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- ========================================
         로그인 ⭐⭐⭐
         ======================================== -->
    <select id="login" resultMap="MemberResultMap">
        SELECT 
            member_id,
            member_email,
            member_pass,
            member_name,
            member_phone,
            member_address,
            member_gender,
            member_birth,
            member_role,
            member_status,
            created_at,
            updated_at
        FROM member
        WHERE member_email = #{param1}
          AND member_pass = #{param2}
          AND member_status = 'ACTIVE'
    </select>
    
    <!-- ========================================
         회원가입 ⭐⭐⭐
         ======================================== -->
    <insert id="insertMember">
        INSERT INTO member (
            member_id,
            member_email,
            member_pass,
            member_name,
            member_phone,
            member_address,
            member_gender,
            member_birth,
            member_role,
            member_status
        ) VALUES (
            #{memberId},
            #{memberEmail},
            #{memberPass},
            #{memberName},
            #{memberPhone},
            #{memberAddress},
            #{memberGender},
            #{memberBirth},
            COALESCE(#{memberRole}, 'USER'),
            COALESCE(#{memberStatus}, 'ACTIVE')
        )
    </insert>
    
    <!-- ========================================
         이메일 중복 체크
         ======================================== -->
    <select id="checkEmailDuplicate" resultType="int">
        SELECT COUNT(*)
        FROM member
        WHERE member_email = #{memberEmail}
    </select>
    
    <!-- ========================================
         ID 중복 체크
         ======================================== -->
    <select id="checkIdDuplicate" resultType="int">
        SELECT COUNT(*)
        FROM member
        WHERE member_id = #{memberId}
    </select>
    
    <!-- ========================================
         회원 조회 (ID로)
         ======================================== -->
    <select id="selectMemberById" resultMap="MemberResultMap">
        SELECT 
            member_id,
            member_email,
            member_pass,
            member_name,
            member_phone,
            member_address,
            member_gender,
            member_birth,
            member_role,
            member_status,
            created_at,
            updated_at
        FROM member
        WHERE member_id = #{memberId}
    </select>
    
    <!-- ========================================
         회원 조회 (이메일로)
         ======================================== -->
    <select id="selectMemberByEmail" resultMap="MemberResultMap">
        SELECT 
            member_id,
            member_email,
            member_pass,
            member_name,
            member_phone,
            member_address,
            member_gender,
            member_birth,
            member_role,
            member_status,
            created_at,
            updated_at
        FROM member
        WHERE member_email = #{memberEmail}
    </select>
    
    <!-- ========================================
         전체 회원 조회
         ======================================== -->
    <select id="selectAllMembers" resultMap="MemberResultMap">
        SELECT 
            member_id,
            member_email,
            member_pass,
            member_name,
            member_phone,
            member_address,
            member_gender,
            member_birth,
            member_role,
            member_status,
            created_at,
            updated_at
        FROM member
        ORDER BY created_at DESC
    </select>
    
    <!-- ========================================
         회원 정보 수정
         ======================================== -->
    <update id="updateMember">
        UPDATE member
        SET member_name = #{memberName},
            member_phone = #{memberPhone},
            member_address = #{memberAddress},
            member_gender = #{memberGender},
            member_birth = #{memberBirth}
        WHERE member_id = #{memberId}
    </update>
    
    <!-- ========================================
         비밀번호 변경
         ======================================== -->
    <update id="updatePassword">
        UPDATE member
        SET member_pass = #{param2}
        WHERE member_id = #{param1}
    </update>
    
    <!-- ========================================
         회원 삭제
         ======================================== -->
    <delete id="deleteMember">
        DELETE FROM member
        WHERE member_id = #{memberId}
    </delete>
    
</mapper>
